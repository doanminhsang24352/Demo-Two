<h1><%= @product.name %></h1>

<% if @product.tag.present? %>
  <p><strong>Tag:</strong> <%= @product.tag %></p>
<% else %>
  <p><strong>Tag:</strong> Not available</p>
<% end %>

<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

<% if @product.featured_image.attached? %>
  <p><strong>Image:</strong></p>
  <%= image_tag @product.featured_image %>
<% else %>
  <p>No image uploaded</p>
<% end %>

<p><strong>Description:</strong></p>
<%= @product.description.body.to_s %>

<br>

<%= link_to "Back", products_path %>

<% if authenticated? %>
  <%= link_to "Edit", edit_product_path(@product) %>
  <%= button_to "Destroy", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>
